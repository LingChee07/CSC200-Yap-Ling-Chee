import java.io.*;
import java.util.ArrayList;

public class FileHandler {

    private static final String FILE_NAME = "accounts.csv";

    // SAVE accounts to file
    public static void saveAccounts(ArrayList<MainAcc> accounts) {
        try (BufferedWriter writer = new BufferedWriter(new FileWriter(FILE_NAME))) {

            for (MainAcc acc : accounts) {

                String type = (acc instanceof SavingAcc) ? "Saving" : "Current";

                writer.write(type + "," +
                             acc.acc_num + "," +
                             acc.acc_name + "," +
                             acc.acc_bal);
                writer.newLine();
            }

            System.out.println("✅ Data saved successfully to " + FILE_NAME + ".");

        } catch (IOException e) {
            System.out.println("❌ Error saving accounts: " + e.getMessage());
        }
    }


    // LOAD accounts from file
    public static ArrayList<MainAcc> loadAccounts() {
        ArrayList<MainAcc> accounts = new ArrayList<>();
        File file = new File(FILE_NAME);

        if (!file.exists()) {
            System.out.println("⚠ No existing account file found. Starting fresh.");
            return accounts;
        }

        try (BufferedReader reader = new BufferedReader(new FileReader(FILE_NAME))) {

            String line;

            while ((line = reader.readLine()) != null) {

                if (line.trim().isEmpty()) continue;

                // Format: Saving,1234,Ali,4500.0
                String[] parts = line.split(",");

                String type = parts[0];
                double num = Double.parseDouble(parts[1]);
                String name = parts[2];
                double bal = Double.parseDouble(parts[3]);

                if (type.equals("Saving")) {
                    accounts.add(new SavingAcc(num, name, bal));
                } else {
                    accounts.add(new CurrentAcc(num, name, bal));
                }
            }

            System.out.println("✅ Accounts loaded successfully!");

        } catch (IOException | NumberFormatException e) {
            System.out.println("❌ Error loading accounts: " + e.getMessage());
        }

        return accounts;
    }
}
